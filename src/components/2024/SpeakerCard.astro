---
import Icon from "@components/Icon.astro";

export interface Props {
  name: string;
  title: string;
  linkedin: string;
  session: string;
  x: string;
  image: string;
}

const { name, title, linkedin, x, image, session } = Astro.props as Props;
---

<div class="w-fit text-white h-full group cursor-pointer">
  <div
    class="h-28 bg-[#050505] rounded-t-[25px] p-4 space-y-1 flex flex-col justify-center"
  >
    <div class="font-bold text-xl capitalize">{name}</div>
    <p class="uppercase text-sm max-w-[250px] text-[#b0b0b0]">{title}</p>
  </div>
  <img
    loading="eager"
    decoding="async"
    class="grayscale group-hover:grayscale-0 transition-all hover:duration-300 ease-in-out"
    width="350"
    height="300"
    src={image}
    alt={name}
  />
  <div
    class="h-30 bg-[#050505] rounded-b-[25px] p-4 pb-8 pt-6 flex flex-row-reverse justify-between"
  >
    <div class="flex items-center space-x-1 min-h-10">
      {
        linkedin && (
          <a href={linkedin} aria-label="Linkedin">
            <Icon icon="linkedin" height="20" />
          </a>
        )
      }
      {
        x && (
          <a href={x} aria-label="X(Twitter)">
            <Icon icon="x-twitter-outline" height="17" />
          </a>
        )
      }
    </div>
    <div
      class="mt-1 border-2 w-fit py-1 px-3 rounded-full h-auto flex items-center gap-x-4"
    >
      <p class="uppercase max-w-xs text-[11px]">
        {session}
      </p>
    </div>
  </div>
</div>
