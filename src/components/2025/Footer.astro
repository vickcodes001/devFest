---
import Icon from "@components/Icon.astro";
---

<div
  class="footerContainer relative flex flex-col gap-6 lg:gap-10 justify-center items-center min-h-[50vh] py-10 lg:py-0 lg:h-[50vh] bg-[#E4FAFF] text-white px-4"
>
  <!-- floating images -->
  <div class="hidden lg:block">
    <img
      src="/images/2025/footer-img1.png"
      alt=""
      class="absolute w-[120px] md:w-[237px] top-[30%] md:top-[10%] left-[5%] md:left-[15%]"
    />
    <!-- date image -->
    <img
      src="/images/2025/footer-img2.png"
      alt=""
      class="absolute w-[120px] md:w-[156px] top-[60%] right-[5%] md:right-[13%]"
    />
  </div>

  <div class="devFest p-3 lg:p-5 bg-black font-google font-medium rounded text-sm lg:text-base">
    <p class="uppercase"><span>#</span>devfestenugu2025</p>
  </div>

  <div class="flex flex-col lg:flex-row gap-3 lg:gap-5 items-center justify-center text-center lg:text-left">
    <img src="/images/2025/logoLarge.png" alt="Logo" class="w-20 lg:h-auto" />
    <p class="text-4xl sm:text-5xl md:text-7xl lg:text-[100px] text-black w-full max-w-full lg:max-w-[1122px] font-bold leading-tight">
      DevFest Enugu 2025
    </p>
  </div>

  <!-- socials -->
  <div class="flex gap-5 lg:gap-10">
    <div class="socials-icon">
      <a aria-label="X(Twitter)" href="https://x.com/GdgEnugu">
        <Icon icon="x-twitter-outline" class="w-4 h-4 md:w-7 md:h-7" />
      </a>
    </div>
    <div class="socials-icon w-[50px] h-[50px] md:w-[70px] md:h-[70px]">
      <a aria-label="Instagram" href="https://www.instagram.com/gdgenugu">
        <Icon icon="instagram-outline" class="w-4 h-4 md:w-7 md:h-7" />
      </a>
    </div>
    <div class="socials-icon w-[50px] h-[50px] md:w-[70px] md:h-[70px]">
      <a
        aria-label="Youtube"
        href="https://www.youtube.com/channel/UCQDbxGe0CCKSuhuQEnxj4Nw"
      >
        <Icon icon="youtube" class="w-5 h-5 md:w-8 md:h-8" />
      </a>
    </div>
  </div>
</div>

<style>
  body {
    font-family: "Syne", sans-serif;
    font-weight: 700;
  }

  .footerContainer {
    background-image: url("/images/2025/footerLine.png");
  }

  span {
    color: #4285f4;
  }

  .socials-icon {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 55px;
    width: 55px;
    background: #292828;
    border-radius: 35px;
  }

  @media (min-width: 1024px) {
    .socials-icon {
      height: 70px;
      width: 70px;
    }
  }
</style>
