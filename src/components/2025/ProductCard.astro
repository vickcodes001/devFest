---
const sponsors = [
  "images/2025/revive.png",
  "images/2025/doc.png",
  "images/2025/tranzakt.png",
  "images/2025/studio-x.png",
  "images/2025/akaoru.png",
  "images/2025/digitpay-finance.png",
  "images/2025/muvam.png",
  "images/2025/top-edu.png",
];
---

<div class="carousel">
  <div class="track">
    {sponsors.map((logo) => <img src={logo} alt="Sponsor logo" class="logo" />)}
    {sponsors.map((logo) => <img src={logo} alt="Sponsor logo" class="logo" />)}
    {sponsors.map((logo) => <img src={logo} alt="Sponsor logo" class="logo" />)}
  </div>
</div>

<style>
  .carousel {
    overflow: hidden;
    width: 100%;
    padding: 20px 0;
  }

  .track {
    display: flex;
    gap: 60px;
    animation: scroll 15s linear infinite;
    width: max-content;
  }

  .logo {
    height: 40px;
    width: 100px;
    object-fit: contain;
    flex-shrink: 0;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-100% / 3));
    }
  }

  @media (max-width: 768px) {
    .track {
      gap: 40px;
      animation: scroll 12s linear infinite;
    }

    .logo {
      height: 32px;
      width: 80px;
    }
  }
</style>
