---
const { imageList = [] } = Astro.props;
---

<div class="marquee-body">
  <article class="wrapper">
    <div class="marquee">
      <div class="marquee__group">
        {
          imageList.map((item: { image: string }) => (
            <img
              width="650"
              height="500"
              class="w-[400px] h-[300px] sm:w-[300px] sm:h-[300px] md:w-[400px] md:h-[400px] lg:w-[800px] lg:h-[600px] rounded-[50px] object-cover border"
              src={item.image}
              alt="Enugu DevFest 2024 Throwback photo"
            />
          ))
        }
      </div>
      <div aria-hidden="true" class="marquee__group">
        {
          imageList.map((item: { image: string }) => (
            <img
              width="650"
              height="500"
              class="w-[400px] h-[300px] sm:w-[300px] sm:h-[300px] md:w-[400px] md:h-[400px] lg:w-[800px] lg:h-[600px] rounded-[50px] object-cover border"
              src={item.image}
              alt="Enugu DevFest 2024 Throwback photo"
            />
          ))
        }
      </div>
    </div>
  </article>
</div>

<style>
  :root {
    --size: clamp(20rem, 1rem + 40vmin, 10rem);
    --gap: calc(var(--size) / 14);
    --duration: 30s;
    --duration-mobile: 30s;
    --scroll-start: 0;
    --scroll-end: calc(-100% - var(--gap));
  }

  * {
    box-sizing: border-box;
  }

  .marquee-body {
    display: grid;
    align-content: center;
    overflow: hidden;
    gap: var(--gap);
    width: 100%;
    min-height: 50vh;
    height: 100%;
  }

  .marquee {
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: var(--gap);
    mask-image: linear-gradient(
      var(--mask-direction, to right),
      hsl(0 0% 0% / 0),
      hsl(0, 0%, 0%) 10%,
      hsl(0 0% 0% / 1) 90%,
      hsl(0 0% 0% / 0)
    );
  }

  .marquee__group {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--gap);
    min-width: 100%;
    animation: scroll-x var(--duration) linear infinite;
  }

  @media (prefers-reduced-motion: reduce) {
    .marquee__group {
      animation-play-state: paused;
    }
  }

  @media screen and (max-width: 768px) {
    .marquee__group {
      animation-duration: var(--duration-mobile); /* Slower scroll on mobile */
    }

    .marquee {
      mask-image: linear-gradient(
        var(--mask-direction, to right),
        hsl(0 0% 0% / 0),
        hsl(0, 0%, 0%) 5%,
        hsl(0 0% 0% / 1) 95%,
        hsl(0 0% 0% / 0)
      );
    }
  }

  @keyframes scroll-x {
    from {
      transform: translateX(var(--scroll-start));
    }
    to {
      transform: translateX(var(--scroll-end));
    }
  }

  /* Parent wrapper */
  .wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--gap);
    margin: auto;
    max-width: 100vw;
  }
</style>
