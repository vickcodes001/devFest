---
import Icon from "@components/Icon.astro";
const sponsorStyling =
  "img-container flex items-center justify-center w-full md:w-[388px] lg:w-[600px] py-[20px] sm:py-[25px] md:py-[30px]";
---

<div
  id="sponsors"
  class="sponsor-container flex flex-col gap-5 sm:gap-10 md:gap-[45px] justify-center items-center p-5 sm:p-10 md:p-20 bg-white"
>
  <!-- first session -->
  <div class="flex flex-col items-center gap-3 sm:gap-5">
    <p
      class="item text-[#FFCD00] text-sm sm:text-base md:text-[16px] lg:text-[24px] uppercase"
    >
      our sponsors
    </p>
    <h2
      class="item text-[#050505] font-bold text-center text-4xl lg:text-[55px] tracking-tighter leading-tight max-w-[900px] w-full mx-auto capitalize"
    >
      event sponsors for <span>#</span>DevfestEnugu 2025
    </h2>
    <p
      class="item w-[310px] md:w-[700px] md:text-[20px] font-google font-normal md:text-[#474747] text-center"
    >
      Join us for thrilling sessions, workshops, and networking opportunities
      around the exciting world of technology.
    </p>
  </div>

  <!-- second section -->
  <div class="flex flex-col items-center gap-3 sm:gap-5 w-full max-w-[1600px]">
    <!-- first container -->
    <div
      class="flex flex-col sm:flex-row justify-center sm:justify-between w-full gap-3 sm:gap-5"
    >
      <div class={`item ${sponsorStyling}`}>
        <img src="/images/2025/sponsor-visa.png" alt="" />
      </div>
      <div class={`item ${sponsorStyling}`}>
        <img src="/images/2025/sponsor-google.png" alt="" />
      </div>
      <div class={`item ${sponsorStyling}`}>
        <img src="/images/2025/sponsor-line.png" alt="" />
      </div>
      <div class={`item ${sponsorStyling}`}>
        <img src="/images/2025/sponsor-cnn.png" alt="" />
      </div>
    </div>

    <!-- second container -->
    <div
      class="flex flex-col sm:flex-row justify-center sm:justify-between w-full gap- sm:gap-5"
    >
      <div class={`item ${sponsorStyling}`}>
        <img src="/images/2025/sponsor-meta.png" alt="" />
      </div>
      <div class={`item ${sponsorStyling}`}>
        <img src="/images/2025/sponsor-splash.png" alt="" />
      </div>
      <div class={`item ${sponsorStyling}`}>
        <img src="/images/2025/sponsor-flag.png" alt="" />
      </div>
    </div>
  </div>

  <style>
    .img-container {
      border: 1px solid gray;
      border-radius: 200px;
      border-style: dashed;
      border-spacing: 200px;
    }

    span {
      color: #34a853;
    }
  </style>

  <script>
    import { animate, stagger, inView } from "motion";

    let hasAnimated = false;

    inView(".sponsor-container", (element, _entry) => {
      if (hasAnimated) return;

      const items = (element as HTMLElement).querySelectorAll(".item");

      animate(
        items,
        { opacity: [0, 1], y: [20, 0] },
        { duration: 0.8, delay: stagger(0.25) }
      );

      hasAnimated = true;
      return () => {};
    });
  </script>
</div>
